<!-- Mostra o resultado da votação na tela -->
<%% if @<%= base_name %>.show_result %>
	<div id="poll_result">
	<p>Poll partial results</p>
		<table>
		<%% for option in @<%= base_name %>.<%= base_name %>_options %>
			<tr>
				<td>
				<p class="progressbar">
					<span><em style="left: <%%= option.percent_vote * 2 %>px"><%%= option.percent_vote %>%</em></span>
				</p>
				</td>
				<td><%%= option.num_resp %> votes</td>
			</tr>
		<%% end %>
	</table>
	</div>
<%% else %>
	<p>Thank you for your vote</p>
<%% end %>
